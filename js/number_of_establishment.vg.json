{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Calculated Annual Growth Rate (CAGR) of Number of Establishments by State",
        "fontSize": 20,
        "fontWeight": "bold",
        "font": "Georgia"
    },
    "width": 800,
    "height": 500,
    "projection": { 
        "type": "mercator"
        },
    "data": {
      "url": "js/malaysia.state.json",
      "format": { "type": "topojson", "feature": "malaysia.state" }
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "js/data.csv"
          },
          "key": "State",
          "fields": ["CAGR_Percentage", "Establishments_2022", "Establishments_2015"]
        }
      }
    ],
    "mark": {
    "type": "geoshape",
    "stroke": "#7c5d5d",  
    "strokeWidth": 1
    },
    "encoding": {
      "color": {
        "field": "CAGR_Percentage",
        "type": "quantitative",
        "scale": {
          "type": "threshold",        
          "domain": [-6, -4, -2, 0],        
          "range": ["#ede0d4", "#e6ccb2", "#ddb892", "#b08968", "#7f5539"]
        },
        "legend": {
          "title": "CAGR Percentage",
          "orient": "bottom-right",
          "direction": "horizontal",
          "gradientLength": 200
        }
      },
      "tooltip": [
        { "field": "properties.name", "type": "nominal", "title": "State" },
        { "field": "Establishments_2022", "type": "quantitative", "title": "Establishments in 2022" },
        { "field": "Establishments_2015", "type": "quantitative", "title": "Establishments in 2015" },
        { "field": "CAGR_Percentage", "type": "quantitative", "title": "CAGR Percentage" }
      ]
    },
    "config": {
        "background": "whitesmoke",
        "padding": {
          "top": -30,
          "left": 10,
          "right": 10,
          "bottom": -5
        },
        "title": {
          "anchor": "start",
          "offset": -60
        },
        "view": {
          "stroke": null
        }
    }
}